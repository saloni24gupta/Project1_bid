<VirtualHost *:80>
  ServerName localhost
  DocumentRoot /var/www/Bidhom

  <Directory /var/www/Bidhom>
    Require all granted
    Options Indexes FollowSymLinks
    AllowOverride All
  </Directory>

  # Proxy all PHP requests to PHPâ€‘FPM via TCP
  ProxyPassMatch ^/(.*\.php(/.*)?)$ fcgi://127.0.0.1:9000/var/www/Bidhom/$1
</VirtualHost>
